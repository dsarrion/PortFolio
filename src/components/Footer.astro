---
import AstroIcon from "./icons/Astro.astro";
import HtmlIcon from "./icons/HtmlIcon.astro";
import TailwindIcon from "./icons/Tailwind.astro";
import UpIcon from "./icons/Up.astro";
import MailIcon from "./icons/Mail.astro";
import LinkedInIcon from "./icons/LinkedIn.astro";
import GithubIcon from "./icons/Github.astro";
---

<footer class="rounded-lg shadow m-4 bg-black/20 backdrop-blur-lg w-full xl:w-[1120px] mx-auto">
    <div class="w-full mx-auto max-w-screen-xl p-2 md:p-4 flex flex-col md:flex-row items-center md:justify-between">
        <span class="mt-2 md:mt-1 ml-2 lg:ml-6 flex justify-center order-2 md:order-none text-sm text-indigo-100/70 sm:text-center cursor-default"
            >Web creada por: <strong class="ml-1"> David Sarrión © 2024</strong>  
        </span>
        <span class="lg:mr-16 flex justify-center order-last md:order-none mt-4 md:mt-0 mb-1 md:mb-0">
            <AstroIcon class="size-8 lg:ml-4"/>
            <HtmlIcon class="size-8 ml-3"/>
            <TailwindIcon class="size-9 ml-3 pb-1.5 " />
        </span>
        <ul class="flex flex-wrap justify-center items-center order-1 md:order-none mt-1 text-sm font-medium text-indigo-100/80">
            <li>
                <a href="#top" class="flex mx-2 md:mr-4 lg:mr-10" title="Subir">
                    <UpIcon class="size-8 md:size-10"/>
                    
                </a>
            </li>
            <li>
                <a href="mailto:samidas86@gmail.com" class="flex mx-2">
                    <MailIcon class="size-6 md:size-7"/>
                    
                </a>
            </li>
            <li>
                <a href="https://www.linkedin.com/in/david-sarri%C3%B3n-mu%C3%B1oz-2ab516284" class="flex mx-2">
                    <LinkedInIcon class="size-5 md:size-6"/>
                    
                </a>
            </li>
            <li>
                <a href="https://github.com/dsarrion" class="flex ml-2 md:mr-2 lg:mr-6">
                    <GithubIcon class="size-5 md:size-6"/>
                    
                </a>
            </li>
        </ul>
    </div>
</footer>
